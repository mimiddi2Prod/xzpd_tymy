}

.img {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  position: absolute;
  margin-left: 150rpx;
  /* top:160rpx;
  left:140rpx; */
}

.userinfo-avatar {
  position: absolute;
  width: 110rpx;
  height: 110rpx;
  left:320rpx;
  top: 360rpx;
  border-radius: 50%;
}

.choose {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
  margin-top: 300px;
}

.date {
  padding: 20rpx 40rpx;
  border-radius: 5px;
  background-color: #7B4FEB;
  color:#fff;
}
