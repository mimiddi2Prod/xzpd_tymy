.body {
  width: 100%;
  height: 1500rpx;
  background: linear-gradient(#14164b, #692c9b);
}

.background {
  position: absolute;
  width: 750rpx;
}

.view {
  display: flex;
  flex-direction: column;
  padding-top: 10rpx;
}

.radio_80 {
  position: absolute;
  width: 230rpx;
  height: 230rpx;
  border-radius: 50%;
  background-color: #fff;
  top: 300rpx;
  left:260rpx;
  opacity: 0.2;
}

