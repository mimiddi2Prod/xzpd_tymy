.bottom {
  position: fixed;
  bottom: 0;
  width: 100%;
}

.bottom-create {
  position: relative;
  width: 100%;
  height: 110rpx;
  line-height: 110rpx;
  background-color: #0c23af;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 30rpx;
  color: #fff;
  border-radius: 0rpx;
}


.leftbottom {
  position: relative;
  float: left;
  width: 50%;
  background-color: #0c23af;
}

.rightbottom {
  position: relative;
  float: right;
  width: 50%;
  background-color: #0c23af;
}

